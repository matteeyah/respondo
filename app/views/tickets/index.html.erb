<div class="row my-3">
  <div class="col-lg-6 mb-2 mb-lg-0 d-flex align-items-center justify-content-start justify-content-lg-start">
    <span class="fs-2 me-2">Tickets</span>
    <span class="rounded-pill text-white bg-danger opacity-75 py-1 px-3">
      <%= bi_icon('people-fill') %>
      <%= current_user.brand.screen_name %>
    </span>
  </div>
  <div class="col-lg-6 mb-2 mb-lg-0 d-flex align-items-center justify-content-end">
    <%= link_to refresh_tickets_path, class: 'btn btn-sm rounded btn-outline-primary',
                                      'data-turbo-method' => :post, 'data-turbo-frame' => :_top do %>
      <%= bi_icon('arrow-clockwise') %>
      <span>Reload</span>
    <% end %>
    <%= form_with url: tickets_path, local: true, method: :get,
                  class: 'flex-grow-1 ms-3', html: { autocomplete: 'off' } do |search_form| %>
      <%= search_form.hidden_field :status, value: request.parameters[:status] %>
      <div class="input-group input-group-sm">
        <%= search_form.text_field :query, required: true, value: request.parameters[:query],
                                           placeholder: 'Search by author or content...', class: 'form-control' %>
        <%= link_to tickets_path(status: request.parameters[:status]),
                    class: 'btn btn-outline-secondary' do %>
          <%= bi_icon('x-lg') %>
        <% end %>
        <%= search_form.button name: :search, class: 'btn btn-outline-secondary' do %>
          <%= bi_icon('search') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <ul class="nav nav-tabs">
    <% Ticket.statuses.each_key do |status| %>
      <li class="nav-item">
        <%= active_link_to tickets_path(status:), active: { status: }, class: 'nav-link' do %>
          <span>
            <%= status.capitalize %>
          </span>
        <% end %>
      </li>
    <% end %>
    <li class="nav-item">
      <%= active_link_to tickets_path(assignee: current_user.id), active: { assignee: current_user.id }, class: 'nav-link' do %>
        <span>
          Assigned to me
        </span>
      <% end %>
    </li>
  </ul>
</div>
<div class="row my-2">
  <%= render partial: 'tickets/tickets', locals: { tickets: @tickets } %>
</div>
<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-center">
      <%= raw(pagy_bootstrap_nav(@pagy)) %>
    </div>
  </div>
</div>
