<% @page_title = "Overview" %>

<p>Welcome <%= current_user.name %>, you're all set! Feel free to hop into the organization mentions!</p>

<div class="grid lg:grid-cols-2 mt-5 gap-5">
  <div class="grid lg:grid-cols-2 gap-10">
    <%= link_to mentions_path, class: "flex flex-col gap-3 card hover:bg-purple-200" do %>
      <%= heroicon("question-mark-circle", options: { class: "w-20 bg-purple-200 rounded-lg" }) %>
      <span>New Mentions</span>
      <span class="text-3xl font-bold"><%= @new_count %></span>
      <hr>
    <% end %>
    <%= link_to mentions_path(status: "open"), class: "flex flex-col gap-3 card hover:bg-blue-200" do %>
      <%= heroicon("folder", options: { class: "w-20 bg-blue-200 rounded-lg" }) %>
      <span>Total Open</span>
      <span class="text-3xl font-bold"><%= @open_count %></span>
      <hr>
    <% end %>
    <%= link_to mentions_path, class: "flex flex-col gap-3 card hover:bg-yellow-200" do %>
      <%= heroicon("clock", options: { class: "w-20 bg-yellow-200 rounded-lg" }) %>
      <span>Unassigned Mentions</span>
      <span class="text-3xl font-bold"><%= @unassigned_count %></span>
      <hr>
    <% end %>
    <%= link_to mentions_path(status: "solved"), class: "flex flex-col gap-3 card hover:bg-red-200" do %>
      <%= heroicon("check", options: { class: "w-20 bg-red-200 rounded-lg" }) %>
      <span>Ð¢otal Solved</span>
      <span class="text-3xl font-bold"><%= @solved_count %></span>
      <hr>
    <% end %>
  </div>
  <div class="rounded-2xl bg-blue-600">
    <div class="flex justify-between items-center text-white p-5">
      <span>Newest</span>
      <%= link_to mentions_path, { class: "size-12 rounded-lg p-4 hover:bg-white hover:text-blue-600", "data-turbo-frame" => :_top } do %>
        <%= heroicon("arrow-top-right-on-square") %>
      <% end %>
    </div>
    <div class="flex flex-col">
      <%= render partial: "mention", collection: @newest_mentions %>
    </div>
  </div>
</div>
