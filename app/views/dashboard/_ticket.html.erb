<div class="list-group-item list-group-item-action bg-secondary rounded-5">
  <%= link_to ticket_path(ticket), class: 'text-decoration-none stretched-link' do %>
    <div class="row">
      <div class="col-lg-2 d-none d-lg-flex align-items-center">
        <div class="social-icon"></div>
        <%= bi_icon(ticket.provider, 'bg-white text-primary rounded-circle fs-3 py-2 px-3') %>
      </div>
      <div class="col-lg-8">
        <p class="m-0 text-white text-opacity-50">
          <%= ticket.author.username %>
        </p>
        <p class="mx-0 my-1 fs-6 text-light">
          <%= ticket.content.first(100) %>
        </p>
        <p class="m-0 text-white-50">
          <%= ticket.created_at.to_fs(:short) %>
        </p>
      </div>
      <div class="col-lg-2 d-none d-lg-flex flex-column justify-content-center align-items-center">
        <div class="replies-icon">
          <%= bi_icon('chat-dots-fill', 'fs-3 text-light') %>
        </div>
        <p class="text-white text-opacity-50">
          <%= ticket.replies.count %> replies
        </p>
      </div>
    </div>
  <% end %>
</div>
