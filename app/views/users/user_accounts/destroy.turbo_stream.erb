<% alert_message = @success ? "User account was successfully deleted." : @account.errors.full_messages.join(",") %>
<%= turbo_stream.append(:alerts, partial: "shared/alert",
                                 locals: { success: @success, message: alert_message }) %>

<% if @success %>
  <%= turbo_stream.remove(@account) %>
  <%= turbo_stream.append(:'account-providers', partial: "shared/account_provider",
                                                locals: { account_provider: @account.provider }) %>
<% end %>
