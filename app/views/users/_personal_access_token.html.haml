.list-group-item{ id: dom_id(personal_access_token) }
  .row
    .col-8.d-flex.align-content-center
      %span.my-2.fw-bold= personal_access_token.name
    .col-4.d-flex.justify-content-end
      = link_to user_personal_access_token_path(personal_access_token.user, personal_access_token),
        'data-turbo-method' => :delete, class: 'btn btn-outline-danger' do
        %span Remove
        = bi_icon('x-circle')
