                     'User was successfully removed from brand.'
                   else
                     'You can not remove the last user in the brand.'
                   end %>
<%= turbo_stream.append(:toasts, partial: 'shared/toast', locals: { success: @success, message: toast_message }) %>
<% if @success %>
  <%= turbo_stream.remove(@user) %>
<% end %>
