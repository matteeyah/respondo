<% alert_message = if @success
                     "User was successfully removed from organization."
   else
                     "You can not remove the last user in the organization."
   end %>
<%= turbo_stream.append(:alerts, partial: "shared/alert",
                                 locals: { success: @success, message: alert_message }) %>
<% if @success %>
  <%= turbo_stream.remove(@user) %>
<% end %>
