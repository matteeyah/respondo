<div class="col-lg-4 mx-auto my-5 text-center">
  <%= bi_icon('emoji-wink-fill', 'fs-1') %>
  <h2>Woohoo, you're in!</h2>
  <p class="text-muted">The next step is to authorize a organization account.</p>
  <hr>
  <div class="container">
    <div class="row gx-2">
      <div class="col">
        <%= auth_provider_link('twitter', { class: 'btn btn-lg x-background px-3 float-end' }) do %>
          <i class="bi bi-twitter" style="color: white"></i>
        <% end %>
      </div>
      <div class="col">
        <%= auth_provider_link('linkedin', { class: 'btn btn-lg linkedin-background px-3 float-start' }) do %>
          <i class="bi bi-linkedin" style="color: white"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
