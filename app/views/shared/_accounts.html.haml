.row
  .col-12.my-3.mb-5
    %h5 Existing accounts
    %hr
    .list-group.list-group-horizontal-lg.flex-wrap
      - model.accounts.each do |account|
        = button_to "Remove #{provider_human_name(account.provider)}",
          [model, account], method: :delete,
          class: 'list-group-item list-group-item-action col-lg-12 text-center list-group-item-danger'

  .col-12.my-3.mb-5
    %h5 New accounts
    %hr
    .list-group.list-group-horizontal-lg.flex-wrap
      - providers.each do |provider|
        - unless model.account_for_provider?(provider)
          = auth_provider_link("Authorize #{provider_human_name(provider)}",
            provider, model.class.to_s.downcase, class: 'list-group-item list-group-item-action col-lg-6 text-center list-group-item-success')

  
