.row.my-3
  .col-12
    %h6.mb-3 Existing accounts
    %hr.border-2.border-top
    .list-group
      - model.accounts.each do |account|
        .list-group-item
          .row
            .col-8.d-flex.align-items-center
              %p.fw-bold.my-0= provider_human_name(account.provider)
            .col-4.d-flex.justify-content-end
              = link_to [model, account], 'data-turbo-method' => :delete do
                = bi_icon('trash3-fill')
          .row
            %p.mb-0.text-muted= account.email
.row.mt-5
  .col-12
    %h6.mb-3 Add account
    %hr.border-2.border-top
    .list-group
      - providers.each do |provider|
        - unless model.account_for_provider?(provider)
          .list-group-item
            .row
              .col-8.d-flex.align-items-center
                %p.fw-bold.my-0= provider_human_name(provider)
              .col-4.d-flex.justify-content-end
                = auth_provider_link(provider, model.class.to_s.downcase, { class: 'bg-transparent border-0' }) do
                  %i.bi.bi-plus-lg.fs-4.text-primary
