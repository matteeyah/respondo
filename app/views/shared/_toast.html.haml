.toast{ role: 'alert', 'aria-live': 'assertive', 'aria-atomic' => 'true', 'data-controller' => 'toast' }
  .toast-header.d-flex.align-items-center
    :ruby
      if success
        color_class = 'success'
        icon = 'emoji-sunglasses-fill'
        title_text = 'Success'
      else
        color_class = 'danger'
        icon = 'heartbreak-fill'
        title_text = 'Error'
      end
    = bi_icon(icon, "text-#{color_class} fs-4 me-2")
    %strong.fs-5.me-auto{ class: "text-#{color_class}" }= title_text
    = button_tag '', class: 'btn-close', 'data-bs-dismiss' => 'toast', 'aria-label' => 'Close'
  .toast-body.text-muted.fs-6
    = message
