{
  "name": "Respondo",
  "description": "Social network hub for companies.",
  "keywords": [
    "brand",
    "identity",
    "social",
    "hub"
  ],
  "website": "https://respondohub.com/",
  "repository": "https://github.com/Respondo/respondo",
  "stack": "heroku-18",
  "env": {
    "RAILS_MASTER_KEY": {
      "description": "A key for decrypting rails secrets.",
      "generator": "secret",
      "required": true
    },
    "RAILS_ENV": {
      "value": "PRODUCTION",
      "required": true
    },
    "LANG": {
      "value": "en_US.UTF-8",
      "required": true
    },
    "ERROR_PAGE_URL": {
      "value": "https://www.herokucdn.com/error-pages/application-error.html",
      "required": true
    },
    "MAINTENANCE_PAGE_URL": {
      "value": "https://www.herokucdn.com/error-pages/maintenance-mode.html",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    },
    "worker": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS"
    }
  ]
}
